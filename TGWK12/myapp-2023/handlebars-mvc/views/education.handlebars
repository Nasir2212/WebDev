
<link rel="stylesheet" href="/css/project.css">
<div id="main">
    <div class="container">
        <h1>Education</h1>
        {{#if isAdmin}}
        <div>
            <a href="/education/new" class="btn btn-link"> new education</a>
        </div>
        {{/if}}
        <div class="columns col-gapless">
            {{#if dbError}}
            <div>
                sorry, there was a problem with the database:<br />
                {{theError}} 
            </div>
            {{else}}
            {{#each education}}
            <div class="column col-5 col-md-5 col-sm-12">
                <div class="card">
                    <a class="card-link" href="/educationdetail/{{eid}}">
                    <div class="card-image">
                        <img src="{{eimgURL}}" alt="{{eimgURL}}" class="img-responsive">
                    </div>
                    <div class="card-header">
                        <div class="card-title h3">{{ename}}</div>
                        <div class="card-subtilte text-grey">{{eyear}} --- {{etype}}</div>
                    </div>
                  <!--  <div class="card-desc">
                        {{edesc}}
                    </div> -->
                    </a>
                    <div class="card-footer">
                        {{#if ../isAdmin}}
                        <div>
                            <a href="/education/update/{{eid}}"> Modify </a>  <a href="/education/delete/{{eid}}" class="important"> Delete</a>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="column col-1 col-md-1 "></div>
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>