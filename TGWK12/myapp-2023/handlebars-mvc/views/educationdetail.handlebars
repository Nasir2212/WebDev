<link rel="stylesheet" href="/css/education.css">
<div id="main">
    <div class="container">
        <h1>Education</h1>
        {{#if isAdmin}}
        <div>
            <a href="/education/new" class="btn btn-link"> new education</a>
        </div>
        {{/if}}
        <div class="columns col-gapless">
            {{#if dbError}}
            <div>
                sorry, there was a problem with the database:<br />
                {{theError}} 
            </div>
            {{else}}
           
            <div class="column col-12 col-md-12 col-sm-12">
                <div class="card">
                     <a class="card-link" href="/educationdetail/{{education.eid}}">
                    <div class="card-image-detail">
                        <img src="{{education.eimgURL}}" alt="{{education.eimgURL}}" class="img-responsive">
                    </div>
                    <div class="card-header">
                        <div class="card-title h3">{{education.ename}}</div>
                        <div class="card-subtilte text-grey">{{education.eyear}} --- {{education.etype}}</div>
                    </div>
                    <div class="card-desc">
                        {{education.edesc}}
                    </div>
                    </a>
                    <div class="card-footer">
                        {{#if ../isAdmin}}
                        <div>
                            <a href="/education/update/{{education.eid}}"> Modify </a> - <a href="/education/delete/{{education.eid}}" class="important"> Delete</a>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            
            {{/if}}
        </div>
    </div>
</div>