<div id="main">
    <div class="container">
        <h1>Users</h1>
        {{#if isAdmin}}
        <div>
            <a href="/users/new" class="btn btn-link">New User</a>
        </div>
        {{/if}}
        <div class="columns col-gapless">
            {{#if dbError}}
            <div>
                Sorry, there was a problem with the database:<br />
                {{theError}} 
            </div>
            {{else}}
            {{#each users}}
            <div class="column col-5 col-md-5 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title h3">{{username}}</div>
                        <div class="card-subtitle text-grey"> - {{role}}</div>
                    </div>
                    <div class="card-text">
                        <div class="card-desc">{{description}}</div>
                    </div>
                    <div class="card-footer">
                        {{#if ../isAdmin}}
                        <div>
                            <a href="/users/update/{{id}}">Modify</a> - <a href="/users/delete/{{id}}" class="important">Delete</a>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="column col-1 col-md-1"></div>
            {{/each}}
            {{/if}}
        </div>
    </div>
</div>